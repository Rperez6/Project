<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
    <script src="/js/cargo.js"></script>
  </head>

  <body class="container">
    <header>
      <%- include('partials/header'); %>
    </header>

    <main>
      <div class="row">
        <div class="col-sm-12">
          <div class="jumbotron">
            <div id="cargo-list">
              <p>Cargo Page</p>

              <button id="getCargoBtn">GET Cargo</button>
              <button id="createCargoBtn">Create Cargo</button>
              <button id="deleteCargoBtn" onclick="deleteCargo()">Delete Cargo</button>

              <button id="updateCargoBtn">Update Cargo</button>

              <div id="cargoResult"></div>

              <div id="createCargoForm" style="display: none;">
                <h3>Create Cargo</h3>
                <form id="addCargoForm">
                  <label for="cargo_id">Cargo ID:</label>
                  <input type="number" id="cargo_id" name="cargo_id" required /><br />
                  <label for="cargo_name">Name:</label>
                  <input type="text" id="cargo_name" name="cargo_name" required /><br />
                  <label for="cargo_type">Type:</label>
                  <input type="text" id="cargo_type" name="cargo_type" required /><br />
                  <label for="cargo_qty">Quantity:</label>
                  <input type="number" id="cargo_qty" name="cargo_qty" required /><br />
                  <button type="submit">Submit</button>
                  <p>To see newly added cargo, select "GET cargo" again</p>
                </form>
              </div>

              <div id="deleteCargoForm" style="display: none;">
                <h3>Delete Cargo</h3>
                <form id="delCargoForm">
                  <label for="cargo_id">Cargo ID:</label>
                  <input type="number" id="del_cargo_id" name="del_cargo_id" required /><br />
                  <button type="submit">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer>
      <%- include('partials/footer'); %>
    </footer>

  </body>
  <script></script>

</html>
